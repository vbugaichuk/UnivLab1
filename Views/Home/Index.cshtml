@{
    ViewData["Title"] = "Лабораторна робота з ІСтаТП 2020";
}

<div class="text-center">
    <h1 class="display-4">Ласкаво просимо</h1>
</div>

<body>
    <div class="img">
        <img src="~/it.jpg" alt="IT компанії" />
        <button class="btn" href="Countries">Перелік країн</button>
    </div>
</body>

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Вихід" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вхід</a>
    <a asp-controller="Account" asp-action="Register">Реєстрація</a>
}

<style>
    p.crop {
        float: left;
        margin: .5em 10px .5em 0;
        overflow: hidden; /* this is important */
        border: 1px solid #ccc;
    }

        p.crop img {
            margin: -341px -400px -400px -400px;
        }

    .img {
        display: inline-block;
        width: 960px;
        height: 300px;
        overflow: hidden;
        border: 1px solid #FFFFFF;
        background: #FFFFFF;
        outline: 1px solid #CCCCCC;
        margin: 10px;
    }

        .img img {
            width: 1300px;
            border: none;
            margin: -201px;
            padding: 0;
        }

        .img .btn {
            display: inline-block;
            position: absolute;
            top: 50%;
            left: 50%;
            box-sizing: border-box;
            margin: 40px;
            padding: 8px;
            width: 80%;
            max-width: 200px;
            background: rgba(255,255,255,0.5);
