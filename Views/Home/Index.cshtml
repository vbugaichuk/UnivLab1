@{
    ViewData["Title"] = "Лабораторна робота з ІСтаТП 2020";
}

<div class="text-center">
    <h1 class="display-4">Ласкаво просимо</h1>
</div>

<body>
    <div class="img">
        <img src="~/it.jpg" alt="IT компанії" />
        <a class="btn" asp-area="" asp-controller="Countries" asp-action="Index">Перелік країн</a>
    </div>
</body>

<hr size=3px width=1000px align=left />
<h1 align="center">Аккаунт</h1>


@if (User.Identity.IsAuthenticated)
{
    <h2>Ви ввійшли як:</h2> <p>@User.Identity.Name</p>

    <form method="post" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Вихід" />
    </form>
}
else
{
    <a asp-controller="Account" asp-action="Login">Вхід</a>
    <a asp-controller="Account" asp-action="Register">Реєстрація</a>
    <div class="controller">
        <a class="btn-success" asp-area="" asp-controller="Account" asp-action="Login">Вхід</a>
        <a class="btn-success" asp-area="" asp-controller="Account" asp-action="Register">Реєстрація</a>
    </div>
}

